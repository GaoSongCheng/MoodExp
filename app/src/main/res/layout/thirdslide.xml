<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <TextView
        android:text="Tex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textViewLeft"
        android:visibility="invisible"/>

    <TextView
        android:text="Tex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textViewLeft"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/textViewRight"
        android:visibility="invisible"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textViewTop"
        android:visibility="invisible"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textViewTop"
        android:layout_alignEnd="@+id/textViewTop"
        android:id="@+id/textViewBottom"
        android:visibility="invisible"/>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_below="@+id/textViewTop"
        android:layout_above="@+id/textViewBottom"

        android:layout_toRightOf="@+id/textViewLeft"
        android:layout_toLeftOf="@+id/textViewRight"
        >


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:id="@+id/tableRowInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/textViewInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:text="\n《安装条款与用户须知》"
                        android:textSize="20dp"
                        android:layout_centerHorizontal="true" />


                </RelativeLayout>

            </TableRow>

            <TableRow
                android:id="@+id/tableRowEmpty2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textViewEmpty2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\n\n\t请正确填写以下信息，我们在调查时会根据以下信息发放活动奖励。\n\n"
                    />
            </TableRow>

            <TableRow
                android:id="@+id/tableRowStuentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textViewStudentName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\n   姓名 :     " />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:ems="10"
                        android:id="@+id/editTextStudentName"
                        android:layout_toRightOf="@id/textViewStudentName"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>
            </TableRow>

            <TableRow
                android:id="@+id/tableRowEmpty6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textViewEmpty6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\n" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRowStudentId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textViewStudentId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\n   学号 :     "
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:ems="10"
                        android:id="@+id/editTextStudentId"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/textViewStudentId"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>
            </TableRow>

            <TableRow
                android:id="@+id/tableRowEmpty5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textViewEmpty5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\n" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRowEmptyEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:ems="10"
                        android:id="@+id/editTextEmail"
                        android:layout_toRightOf="@id/textViewEmail"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />

                    <TextView
                        android:id="@+id/textViewEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\n邮箱地址 : "
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />
                </RelativeLayout>
            </TableRow>

            <TableRow
                android:id="@+id/tableRowEmpty3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textViewEmpty3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\n" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRowEmptyPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textViewPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\n联系电话 : " />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:ems="10"
                        android:id="@+id/editTextPhone"
                        android:layout_toRightOf="@id/textViewPhone"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>
            </TableRow>

            <TableRow
                android:id="@+id/tableRowEmpty4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textViewEmpty4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\n" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRowButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <Button
                        android:id="@+id/button_submit_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        style="?android:attr/borderlessButtonStyle"
                        android:text="确定" />


                </RelativeLayout>
            </TableRow>


        </TableLayout>
    </ScrollView>



</RelativeLayout>